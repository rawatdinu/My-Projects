<UserControl x:Class="WPFDemo.DataBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Viewbox Stretch="Fill">
        <DockPanel Margin="10">
            <StackPanel DockPanel.Dock="Right" Margin="5" >
                <Button Name="btnAdd" Width="100" Content="Add User" Click="btnAdd_Click" />
                <Button Name="btnEdit" Width="100" Content="Edit User" Click="btnEdit_Click" />
                <Button Name="btnDelete" Width="100" Content="Delete User" Click="btnDelete_Click" />
            </StackPanel>
            <ListBox Name="lstUser" DisplayMemberPath="Name" Width="200" Height="400" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Visible">

            </ListBox>
        </DockPanel>
    </Viewbox>
   
</UserControl>
