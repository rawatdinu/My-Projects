<Window x:Class="LanguageFuturePoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Input Language" Margin="5"/>
        <ComboBox Name="cmbLanguageName" Grid.Row="0" Grid.Column="1" IsEditable="False" Width="250" HorizontalAlignment="Left" Margin="5" SelectionChanged="cmbLanguageName_SelectionChanged" />
        
        <TextBox Name="txtParagraph" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" AcceptsReturn="True" FontSize="13" />
        
    </Grid>
</Window>
